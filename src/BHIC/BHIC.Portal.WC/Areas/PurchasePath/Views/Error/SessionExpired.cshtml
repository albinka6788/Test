@using System.Web.Mvc;
@using System.Web;

@using BHIC.Common.XmlHelper;
@using BHIC.Common.Configuration;
@{

    var cdnVersion = BHIC.Portal.WC.BaseController.GetAssemblyVersion();
}
@{
    ViewBag.Title = "SessionExpired";
    Layout = "~/Areas/PurchasePath/Views/Shared/_LayoutQuote.cshtml";
}

<!--Comment : Here MetaTag Information For AppSession Handling -->
<meta name="AppSessionTimedOut" content="true">

@CDN.RenderScripts("/bundles/scripts/session-countdown-timer")
<script type="text/javascript">
    $(document).ready(function () {
        var wH = $(window).height() - 320;
        $('.page-content').css('minHeight', wH);
    });
</script>
<div class="container">
    <div class="alert alert-warning alert-big">
        <p class="text-bold alert-text-big"> Session Expired! </p>
        <p class="alert-text">
            Your session has timed out. You will be redirected to Home page in a short while.&nbsp;
            <b><span id="timerCount"></span></b>
        </p>
    </div>
</div>
