@using BHIC.Common.XmlHelper;
@using BHIC.Common.Configuration;
<script type="text/javascript">
    $(document).ready(function () {
        var wH = $(window).height() - 320;
        $('.page-content').css('minHeight', wH);
    });
</script>
<section class="page-content">
    @*@Html.AntiForgeryToken()*@
    <div class="container">
        <div class="alert alert-warning alert-big">
            <p class="text-bold alert-text-big"> We're currently unable to respond to your request - Sorry! </p>
            <p class="alert-text mb0"> We are aware of the issue and are working to resolve it for you. </p>
            <p class="alert-text mb0"> We apologize for the inconvenience. </p>
            <p class="alert-text">
                Please try again later or feel free to <a href='@ConfigCommonKeyReader.AppBaseUrl'>Start Over</a> and try entering different values.
            </p>

            @*<p class="alert-text"> Please try again later or feel free to <a href='@string.Concat(HttpContext.Current.Request.Url.Scheme, "://", 
                            HttpContext.Current.Request.Url.Host, ConfigCommonKeyReader.PurchasePathAppBaseURL)'> Start Over </a> and try entering different values. </p>*@
        </div>
    </div>
</section>