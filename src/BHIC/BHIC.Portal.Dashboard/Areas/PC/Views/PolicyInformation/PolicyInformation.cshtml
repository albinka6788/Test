<form novalidate>
    @*@Html.AntiForgeryToken()*@
    <div class="pageHeading">
        <p>  If you would like to update your business information, please <a id='RequestPolicyChange' href='#/RequestPolicyChange'>Request a Policy Change</a>. </p>
    </div>
    <div>
        <div ng-if="policy">
            <div class="alert alert-success info-panel" ng-if="policy.transactionID!=''">
                <p class="alert-text">Thank you!  Your payment has been confirmed.</p>
            </div>
            <div class="alert alert-danger info-panel" ng-if="policy.transactionError!=''">
                <p class="alert-text" ng-bind="policy.transactionError"></p>
            </div>
        </div>
        <span class="error" ng-bind="policyInformationController.errorMessage"></span>
        <div class="row equalize">
            <div class="lg-col-6">
                <div class="the-box content-box form-container">
                    <div class="row contentRow no-pad" ng-if="policy.transactionID!=''">
                        <div class="md-col-6 lg-col-6">
                            <span>Payment Confirmation No.</span>
                        </div>
                        <div class="md-col-6 lg-col-6">
                            <span class="text-medium" ng-bind="policy.transactionID"></span>
                        </div>
                    </div>
                    <div class="row contentRow no-pad">
                        <div class="md-col-6 lg-col-6 fulllabel">
                            <span>Policy Code</span>
                        </div>
                        <div class="md-col-6 lg-col-6 fulllabel">
                            <span class="text-medium" ng-bind="policy.code"></span>
                        </div>
                    </div><!-- /.row -->
                    <div class="row contentRow no-pad">
                        <div class="md-col-6 lg-col-6 fulllabel">
                            <span>Effective Date</span>
                        </div>
                        <div class="md-col-6 lg-col-6 fulllabel">
                            <span class="text-medium" ng-bind="policy.effectiveDate"></span>
                        </div>
                    </div><!-- /.row -->
                    <div class="row contentRow no-pad">
                        <div class="md-col-6 lg-col-6 fulllabel">
                            <span>Expiration Date</span>
                        </div>
                        <div class="md-col-6 lg-col-6 fulllabel">
                            <span class="text-medium" ng-bind="policy.expiredDate"></span>
                        </div>
                    </div><!-- /.row -->
                    <div class="row contentRow no-pad">
                        <div class="md-col-6 lg-col-6 fulllabel">
                            <span>Policy Status</span>
                        </div>
                        <div class="md-col-6 lg-col-6 fulllabel">
                            <span class="text-teal--dark text-medium" ng-bind="policy.statusText"></span>
                        </div>
                    </div><!-- /.row -->                     
                </div><!--end the-box-->
            </div>
            <div class="lg-col-6">
                <div class="the-box content-box no-equalize">
                    <div class="row contentRow no-pad">
                        <div class="md-col-6 lg-col-7 fulllabel sm-margin-bottom">
                            <span>Minimum Amount Due <br> <strong ng-bind="policy.minimumAmountDue|currency"></strong></span>
                        </div>
                        <div class="md-col-6 lg-col-5 fulllabel">
                            <span class=" pull-right">
                                <span><a id="Alink" class="btn btn-primary" ng-href="{{(policy.remainingBalance<=0) ? '' : link1}}" ng-disabled="{{(policy.minimumAmountDue<=0) ? true : ''}}"> Make Payment  </a></span>
                            </span>
                        </div>
                    </div><!-- /.row -->
                    <div class="row contentRow no-pad">
                        <div class="md-col-6 lg-col-7 fulllabel sm-margin-bottom">
                            <span>Remaining Amount <br> <strong ng-bind="policy.remainingBalance|currency"></strong></span>
                        </div>
                        <div class="md-col-6 lg-col-5 fulllabel">
                            <span class=" pull-right">
                                <span>
                                    <a id="Alink" class="btn btn-primary" ng-href="{{(policy.remainingBalance<=0) ? '' : link2}}" ng-disabled="{{(policy.remainingBalance<=0) ? true : ''}}"> Make Payment </a>
                                </span>
                            </span>
                        </div>
                    </div><!-- /.row -->
                </div>
            </div>
        </div>
        <h3> Business Information </h3>
        <div class="the-box form-container">
            <div class="row">
                <div class="md-col-12 lg-col-12 form-box-1 form-horizontal form-contact-details">
                    <div class="form-group form-contact-details">
                        <label class="lg-col-3 md-col-12 fulllabel">Business Name :</label>
                        <div class="lg-col-7 md-col-12">
                            <span class="contactDetails" ng-bind="policy.businessName"></span>
                        </div>
                    </div>
                    <div class="form-group form-contact-details mb4">
                        <label class="lg-col-3 md-col-12 fulllabel">Business Type :</label>
                        <div class="lg-col-7 md-col-12">
                            <span class="contactDetails" ng-bind="policy.businessType"></span>
                        </div>
                    </div>
                    <h3 class="text-big"> Business Mailing Address </h3>
                    <div class="form-group form-contact-details">
                        <label class="lg-col-3 fulllabel">Address Line 1 :</label>
                        <div class="lg-col-7">
                            <span class="contactDetails" ng-bind="policy.address1"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="lg-col-3 fulllabel">Address Line 2 :</label>
                        <div class="lg-col-7">
                            <span class="contactDetails" ng-bind="policy.address2"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="lg-col-3 fulllabel">City :</label>
                        <div class="lg-col-7">
                            <span class="contactDetails" ng-bind="policy.city"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="lg-col-3 fulllabel">State :</label>
                        <div class="lg-col-7">
                            <span class="contactDetails" ng-bind="policy.state"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="lg-col-3 fulllabel">Zip Code :</label>
                        <div class="lg-col-7">
                            <span class="contactDetails" ng-bind="policy.zip"></span>
                        </div>
                    </div>
                </div>
                <!-- /.grid-6 -->
            </div>
            <!-- /.row -->
        </div>
    </div>
</form>

