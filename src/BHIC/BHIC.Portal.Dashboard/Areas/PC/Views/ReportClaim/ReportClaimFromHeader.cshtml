@using BHIC.Common.Html;
@using BHIC.Common.Configuration;
@using BHIC.Common.XmlHelper;

<div class="row" ng-init="loadUrl();">
    <div class="alert alert-danger info-panel" ng-if="hasErrorMain">
        <p class="text-bold alert-text">
            This option is currently not available for your policy. Feel free to call us at
            <a href="" class="sysPhoneAnchor" style="white-space:nowrap;"></a> if you have any questions.
            <a href='@string.Concat(HttpContext.Current.Request.Url.Scheme, "://",
                            HttpContext.Current.Request.Url.Host,"/" ,ConfigCommonKeyReader.BaseUrlPath)'>Click here</a> to go back to policy dashboard.

    </div>
    <div class="lg-col-7 md-col-12 form-horizontal">        
        <form name="rptFrm" data-ng-submit="rptFrm.$valid && GoTo();" onerrorfocus-form novalidate="novalidate">
            <div class="the-box box-no-heading">
                <div class="form-group">
                    <label class="lg-col-3 md-col-12 fulllabel left">Select Line of Business</label>
                    <div class="lg-col-9 fulllabel">
                        <select class="dk field-lg field" ng-model="lineType" name="lineTypeModel" ng-options="t.Type for t in drpTypeList" ng-change="FilterByLineOfBusiness()" required>
                            <option value="" disabled="disabled">--- Select Line of Business ---</option>
                        </select>
                        <span class="error" ng-show="rptFrm.lineTypeModel.$error.required && submitted">Please select a line of business</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="lg-col-3 md-col-12 fulllabel left">Choose Policy</label>
                    <div class="lg-col-9 fulllabel">
                        <select class="dk field-lg field" name="policyTypeModel" ng-model="policyType" ng-options="p.PolicyCode for p in drpPolicyList" required>
                            <option value="" disabled="disabled">--- Select Policy Code ---</option>
                        </select>
                        <span class="error" ng-show="rptFrm.policyTypeModel.$error.required && submitted">Please select a policy code.</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-lg-12 right">
                            <button ng-click="submitted=true" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
