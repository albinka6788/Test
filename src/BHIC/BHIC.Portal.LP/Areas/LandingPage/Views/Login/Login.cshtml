<div class="box-header">
    <h2 style=" text-align:center; margin-left: 10px; height:42px; ">
        <span style="text-align:right;" > Internal Landing Page Portal</span>
    </h2>
</div>

<div ng-init="clearLogin();" class="login-box">
    <div class="box-header">
        <h2 style="margin-left:10px;">Log In</h2>
    </div>
    <div>
        <form>
            <center>
                <table style="margin-top:20px;">
                    <tr><td style="text-align:center;" ><span class="error">{{responseMsg}}</span></td></tr>
                    <tr><td style="text-align:center;"><input ng-model="uname" type="text" placeholder="Username" /></td></tr>
                    <tr><td style="text-align:center;"><input ng-model="password" type="password" placeholder="Password" ng-keyup="eventPropagation($event);" /></td></tr>
                    <tr><td style="text-align:center;"><button type="submit" name="Login" value="Login" ng-click="Login();">Login</button></td></tr>
                </table>
            </center>
        </form>
    </div>
</div>