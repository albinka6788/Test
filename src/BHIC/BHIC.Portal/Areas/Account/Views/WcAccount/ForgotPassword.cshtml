@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Areas/Account/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Custom/user-registration.css" rel="stylesheet" />

<div id="div-forgotPassword" data-ng-app="bhic-app" data-ng-controller="loginCtrl as forgotPasswordCtrl" class="ds-page-container">
    <div class="ds-wrap">
        <div class="ds-content-container">
            <div class="ds-content-region">
               <h2>Forgot your password?</h2> 
                <div class="ds-row">
                    <div class="ds-col-12">
                        <form id="forgot_password" name="forgot_password" novalidate data-ng-submit="forgot_password.$valid && forgotPasswordCtrl.forgotPasswordSubmit(forgotPasswordCtrl.forgotPasswordModel);">
                            <h4>Enter your email address to receive an email containing a link to reset your password.</h4>
                            <div class="control-group" data-ng-class="{true: 'error'}[submitted && forgot_password.email.$invalid]">
                                <div class="controls">
                                    <input type="email" placeholder="Email" data-ng-model="forgotPasswordCtrl.forgotPasswordModel.email" name="email" ng-required="true" />
                                    <span data-ng-show="submitted && forgot_password.email.$error.required" class="has-error">Email is required.</span>
                                    <span data-ng-show="submitted && forgot_password.email.$error.email" class="has-error">Invalid email address.</span>
                                </div>
                            </div>
                            <br />
                            <div class="div-row">
                                <input type="submit" value="Email Link" ng-click="submitted=true" class="ds-button-activecommand" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--Comment : Here related scripts files-->
    <script src="~/Scripts/bhic/controllers/wc/loginCtrl.js"></script>
    <script src="~/Scripts/bhic/services/wc/userProfileService.js"></script>
</div>