@{
    ViewBag.Title = "SaveForLater";
    Layout = "~/Areas/Landing/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Custom/user-registration.css" rel="stylesheet" />

<div id="div-userRegister" data-ng-app="bhic-app" data-ng-controller="questionsPageCtrl as saveForLaterCtrl" class="ds-page-container">
    <div class="ds-wrap">
        <div class="ds-content-container">
            <div class="ds-content-region">
                <div class="ds-row">
                    <div class="ds-col-12">
                        <form id="email_quote" name="email_quote" novalidate data-ng-submit="email_quote.$valid && saveForLaterCtrl.saveForLaterSubmit(saveForLaterCtrl.emailModel);">
                            <h2>Get Access To Your Quote Via Email!</h2>
                            <p><strong>Thank you for your consideration</strong></p>
                            <p>We'll be happy to send a link for your confidential quote to the email address provided below.</p>
                            <p>We promise that your email address won't be used for any other purpose without your express permission.</p>
                            <div class="panel">
                                <div class="panel-body">
                                    <div class="ds-row">
                                    </div>
                                    <div class="form-group ds-row">
                                        <label class="ds-col-4">Email Address</label>
                                        <div class="ds-col-8">
                                            <input type="email" placeholder="Email" data-ng-model="saveForLaterCtrl.emailModel.email" name="email" ng-required="true" />
                                            <span data-ng-show="submitted && email_quote.email.$error.required" class="has-error">Email is required.</span>
                                            <span data-ng-show="submitted && email_quote.email.$error.email" class="has-error">Invalid email address.</span>
                                        </div>
                                    </div>
                                    <div class="ds-row">
                                        <input type="submit" value="Send My Quote!" ng-click="submitted=true" /> @Html.ActionLink("Or, Start Over", "Index", "WcHome", new { area = "Landing" }, null)
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/bhic/controllers/wc/questionspageCtrl.js"></script>
    <script src="~/Scripts/bhic/services/wc/questionsApi.js"></script>
</div>


